{
    "name": "slect",
    "version": "0.0.6",
    "description": "A Javascript select field library.",
    "repository": "https://github.com/sahilanguralla/slect.git",
    "license": "MIT",
    "scripts": {
        "lint": "lint-staged",
        "dev": "webpack-dev-server --config webpack/webpack.dev.config.js --color --progress",
        "build": "webpack --config webpack/webpack.prod.config.js --color --progress"
    },
    "pre-commit": [
        "lint"
    ],
    "lint-staged": {
        "linters": {
            "*.{js, jsx, json}": [
                "eslint --fix --no-eslintrc -c .eslintrc-airbnb",
                "git add"
            ],
            "*.{ts,tsx}": [
                "tslint --fix -c .tslintrc-airbnb.json",
                "git add"
            ]
        }
    },
    "main": "dist/slect.min.js",
    "typings": "dist/slect.min.d.ts",
    "devDependencies": {
        "@types/webpack-env": "^1.13.6",
        "acorn": "^6.0.2",
        "autoprefixer": "^9.4.3",
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.3",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-stage-0": "^6.24.1",
        "circular-dependency-plugin": "^5.0.2",
        "clean-webpack-plugin": "^1.0.0",
        "compression": "^1.7.3",
        "copy-webpack-plugin": "^4.6.0",
        "css-hot-loader": "^1.4.2",
        "css-loader": "^0.28.11",
        "eslint": "^5.8.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^3.1.0",
        "eslint-import-resolver-webpack": "^0.10.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^1.1.11",
        "git-revision-webpack-plugin": "^3.0.3",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.1.3",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.0.4",
        "mini-css-extract-plugin": "^0.5.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "postcss-loader": "^2.1.5",
        "prettier": "^1.15.3",
        "svg-inline-loader": "^0.8.0",
        "ts-loader": "^5.2.2",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tsutils": "^3.2.0",
        "typescript": "^3.1.3",
        "uglifyjs-webpack-plugin": "^2.1.1",
        "webpack": "^4.28.2",
        "webpack-bundle-analyzer": "^3.0.3",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.3",
        "webpack-merge": "^4.1.5",
        "webpack-serve": "^1.0.2"
    }
}
